      div(section="contact")
        div(ng-controller="ContactCtrl as contact")

          h2 Contact

          .alert.alert-success(ng-if="contact.message") {{contact.message}}

          form.form-horizontal(ng-submit="contact.sendEmail( contact.contact )")
            .form-group
              label.col-sm-2.control-label Name
              .col-sm-10
                input.form-control(ng-model="contact.contact.name" type="text" placeholder="Name")
            .form-group
              label.col-sm-2.control-label Email
              .col-sm-10
                input.form-control(ng-model="contact.contact.email" type="email" placeholder="Email")
            .form-group
              label.col-sm-2.control-label Comment
              .col-sm-10
                textarea.form-control(ng-model="contact.contact.comment" rows="4" placeholder="Comment")
            .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type="submit") Submit

